<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_go_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        android:text="Go to"
        android:textColor="#000"
        app:layout_anchor="@+id/layout_main_infos"
        app:layout_anchorGravity="top|end"
        app:srcCompat="@drawable/icon_google_direction" />


    <RelativeLayout
        android:id="@+id/layout_main_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_name_of_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="115dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Place Holeder AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="#000"
            android:textSize="30sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_of_place"
            android:layout_marginLeft="15dp"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progressBackgroundTint="#000000"
            android:progressTint="#CCB002"
            android:rating="2"
            android:secondaryProgressTint="#B7FFFFFF" />

        <TextView
            android:id="@+id/tv_average_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_of_place"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/ratingBar"
            android:text="5.0"
            android:textColor="#92000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_num_of_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_of_place"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_average_rating"
            android:text="(99999)"
            android:textColor="#92000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/review"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_background"
                    android:padding="5dp"
                    android:text="Leave a review"
                    android:textAllCaps="false"
                    android:textColor="#000" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_review"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>